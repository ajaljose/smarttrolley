<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/recyclermycartlayout"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cartproductimg"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    />
                <TextView
                    android:id="@+id/cartproductname"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/cartproductimg" />
                <TextView
                    android:id="@+id/cartbrandname"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/cartproductimg"
                    android:layout_below="@+id/cartproductname"
                    />
                <TextView
                    android:id="@+id/cartprice"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:layout_toRightOf="@id/cartproductimg"
                    android:layout_below="@id/cartbrandname"
                    />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
